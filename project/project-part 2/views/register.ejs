        <link rel="stylesheet" href="/css-reset.css">
        <link rel="stylesheet" href="/css/style.css">
    </head>
    <body>
        <form action="/v1/patients" method="post"> 
            <legend>Patient registration form</legend>

            <label for="Pid">ID</label>
            <input type="text" id="Pid" name="Pid">

            <label for="firstName">First name</label>
            <input type="text" id="firstName" name="firstName" pattern="[a-zA-Z]{2,20}" title="2 to 20 letters">

            <label for="lastName">Last name</label>
            <input type="text" id="lastName" name="lastName" pattern="[a-zA-Z]{2,20}" title="2 to 20 letters">

            <label for="email">Email</label>
            <input type="email" id="email" name="email" title="An email">

            <label for="phoneNumber">Phone Number</label>
            <input type="text" id="phoneNumber" name="phoneNumber" required pattern="[0-9]{10,14}" title="a phone number of 10 to 14 digits">

            <label for="department">Department</label>
            <input type="text" id="department" name="department" required>

            <input type="submit">
            <input type="reset">
        </form>
